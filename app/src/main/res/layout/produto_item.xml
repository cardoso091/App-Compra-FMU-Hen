<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black">


    <androidx.cardview.widget.CardView
        android:id="@+id/containerImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/white"
        android:layout_margin="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <ImageView
        android:id="@+id/produto1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"/>
        
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txtProdutoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Produto Name"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/containerImg"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/txtProdutoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="iPhone 14 chega como o novo modelo padrão da principal linha da Apple em 2022. As principais melhorias estão no aplicativo de câmera. Por exemplo, mantém a tela de 6,1 polegadas OLED de 60 Hz."
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="140dp"
        android:layout_marginEnd="10dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toEndOf="@id/containerImg"
        app:layout_constraintTop_toBottomOf="@id/txtProdutoName"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/txtPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$ 7.500"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toEndOf="@id/containerImg"
        app:layout_constraintTop_toBottomOf="@id/txtProdutoDescription"/>

<Button
    android:id="@+id/btAddCart"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:text="Add Carinho"
    android:textSize="12sp"
    android:layout_margin="10dp"
    android:textColor="@color/white"
    android:textStyle="bold"
    android:backgroundTint="@color/red"
    app:layout_constraintTop_toBottomOf="@id/txtProdutoDescription"
    app:layout_constraintStart_toEndOf="@id/txtPrice"
    app:layout_constraintEnd_toEndOf="parent"

<View
    android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="@color/white"
    android:layout_margin="20dp"
    app:layout_constraintTop_toBottomOf="@id/btAddCart"
    app:layout_constraintStart_toEndOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>